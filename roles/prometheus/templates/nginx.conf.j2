upstream alertmanager {
    server alertmanager.service.consul:9093;
}

upstream grafana {
    server grafana.service.consul:3000;
}

upstream prometheus {
    server prometheus.service.consul:9090;
}


server {
    listen 80;
    server_name {{ alertmanager.domain }};

{% if env != 'local' %}
    location ~ /.well-known {
        root /var/www;
        allow all;
    }

    location / {
        return 301 https://$server_name$request_uri;
    }
{% else %}
    location / {
      auth_basic "Alertmanager realm";
      auth_basic_user_file /etc/nginx/conf.d/prometheus.htpasswd;

      proxy_pass                            http://alertmanager;
      proxy_set_header  Host                $http_host;   # required for docker client's sake
      proxy_set_header  X-Real-IP           $remote_addr; # pass on real client's IP
      proxy_set_header  X-Forwarded-For     $proxy_add_x_forwarded_for;
      proxy_set_header  X-Forwarded-Proto   $scheme;
      proxy_read_timeout                    900;
    }
{% endif %}
}

{% if env != 'local' %}
server {
    listen 443 ssl http2;
    server_name {{ alertmanager.domain }};

    ssl_certificate /etc/letsencrypt/live/{{ alertmanager.domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ alertmanager.domain }}/privkey.pem;
    ssl_verify_depth 3;

    ssl_session_timeout 5m;
