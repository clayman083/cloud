user  nginx;
worker_processes  auto;

error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;


events {
    worker_connections 1024;
    use epoll;
    multi_accept on;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format main '$remote_addr - $remote_user $time_iso8601 '
                    '$request_id '
                    '"$request_method $host $request_uri $scheme $server_protocol" '
                    '"$status $body_bytes_sent $request_time" '
                    '"$http_referer" "$http_user_agent" '
                    '"$http_x_forwarded_for"';

    access_log  syslog:server={{ private_network.address }}:514,facility=local7,tag=nginx,severity=info,nohostname  main;
    error_log syslog:server={{ private_network.address }}:514,facility=local7,tag=nginx,nohostname;

    sendfile        on;
    tcp_nodelay     on;
    tcp_nopush 	    on;

    keepalive_timeout  75;
    keepalive_requests 100;

    gzip on;
    gzip_disable "msie6";
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;

    open_file_cache max=200000 inactive=20s;
    open_file_cache_valid 30s;
    open_file_cache_min_uses 2;
    open_file_cache_errors on;

    # Default config
    server {
        listen 80 default;

        root /var/www;

        location ~ /.well-known {
            allow all;
        }

        location / {
            root   /usr/share/nginx/html;
            index  index.html index.htm;
        }

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   /usr/share/nginx/html;
        }
    }

    include /etc/nginx/conf.d/*.conf;
}
