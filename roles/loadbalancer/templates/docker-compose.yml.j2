---

version: '3.3'

networks:
  backend:
    external:
      name: backend

services:
  server:
    build: ./
    image: loadbalancer:1.15
    container_name: loadbalancer
    dns: {{ private_network.address }}
{% if env != 'local' %}
    logging:
      driver: syslog
      options:
        syslog-address: "unixgram:///dev/log"
        tag: loadbalancer
{% endif %}
    networks:
      - backend
    ports:
      - target: 80
        published: 80
        mode: host
      - target: 443
        published: 443
        mode: host
    restart: always
    volumes:
      - ./consul-templates:/etc/consul-templates
      - ./conf.d:/etc/nginx/conf.d
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./service:/etc/service
{% if env != 'local' %}
      - /etc/letsencrypt:/etc/letsencrypt
      - /var/www:/var/www
{% endif %}
