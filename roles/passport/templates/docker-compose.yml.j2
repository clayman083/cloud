---

version: '3.3'

networks:
  {{ passport.container.network }}:
    external: true

services:
  server:
    image: {{ passport.image }}
    dns: {{ private_network.address }}
    env_file: .env
    networks:
      - {{ passport.container.network }}
{% if env != 'develop' %}
    logging:
      driver: syslog
      options:
        syslog-address: "unixgram:///dev/log"
        tag: passport
{% endif %}

    deploy:
      mode: replicated
      replicas: {{ passport.replicas }}
      resources:
        limits:
          memory: 256M
        reservations:
          memory: 64M
      update_config:
        parallelism: 1
        failure_action: rollback
        delay: 30s
      restart_policy:
        condition: any
        delay: 5s
        window: 120s
